<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6CC"
    tools:context=".Contact">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/food_logo" />



        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:fontFamily="@font/cabin_condensed_regular"
            android:textColor="#00994D"
            android:text="Version 1.0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/by"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/cabin_condensed_medium"
            android:gravity="center"
            android:text="By:"
            android:textColor="#006600"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/cabin_condensed_regular"
            android:gravity="center"
            android:text="Cheam Zhi Kai"
            android:textColor="#00994D"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/emailicon"
                android:layout_width="38dp"
                android:layout_height="24dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/email" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/cabin_condensed_medium"
                android:gravity="center"
                android:text="Contact:"
                android:textColor="#006600"
                android:textSize="24sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>