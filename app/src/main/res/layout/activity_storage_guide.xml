<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFCC"
    tools:context=".StorageGuide">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to food storage!"
                android:fontFamily="@font/cabin_condensed_medium"
                android:textAlignment="center"
                android:textColor="#00994D"
                android:textSize="40sp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/cabin_condensed_regular"
                android:textColor="#000000"
                android:text="Here is a guide to show you how a food item is stored:"
                android:textSize="25dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="600dp"
                android:layout_height="600dp"
                android:layout_gravity="center"
                android:src="@drawable/storage_guide" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_condensed_regular"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="This gif above will show you how to use the food storage!"
                android:textSize="25dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>